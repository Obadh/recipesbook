      <div class="container productsContainer" ng-controller="Appctrl">
        <div id="products" class="row list-group">
          <form action="/get_recipe" method="post">

            <div ng-repeat="category in categories">
              <div class="clearfix"></div>
              <h1>[[category.name]]</h1>

              <div class="item col-xs-6 col-sm-4 col-md-3 col-lg-2" ng-repeat="item in category.items | filter:searching">
                <label class="btn">
                  <div class="thumbnail">
                    <img class="group list-group-image img-thumbnail img-check" ng-click="selectIngredients(item,$event)" ng-class="{'check' : toggle}" ng-src="[[item.image]]" alt="User Pic" />
                    <input type="checkbox" ng-model="item.toggle" name="food" value="[[item.name]]" class="hidden" />
                    <div class="caption">
                      <h4 class="group inner list-group-item-heading">[[item.name]]</h4>
                    </div>
                 </div>
                </label>
              </div>
            </div>
            <button class="pull-left btn btn-primary" id="fixed-btn" type="submit">
              Number of results:  <span class="badge">[[ totalRecepiesFound ]]</span>
            </button>
          </form>
        </div>
      </div>




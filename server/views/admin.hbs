<div class="container">
  <div class="row">
       <div class="col-lg-12">
     <div class="button-group">
        <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-plus"></span> <span class="caret"></span></button>
<ul class="dropdown-menu">
  {{# each items }}

<li><a href="#" class="small" name="food" value="[[item.name]]" tabIndex="-1"><input type="checkbox"/>  {{ this.name }} </a></li>
  {{/each}}
</ul>
  </div>
</div>
  </div>
</div>


<div class="form">

    <ul class="tab-group">
        <li class="tab active"><a href="#addRecipe">Add recipe</a></li>
        <li class="tab"><a href="#addIngredient">add ingredient</a></li>
    </ul>

    <div class="tab-content">
        <div id="addRecipe">
            <h1>Add Your Recipe</h1>

            <form action="/admin/recipe" method="post">


                <div class="field-wrap">
                    <label>
                        The name<span class="req">*</span>
                    </label>
                    <input type="text" required autocomplete="off" name="name_recipes" />
                </div>

                <div class="field-wrap field-wrap-2">
                    <label>
                        Descreption<span class="req">*</span>
                    </label>
                    <textarea rows="4" cols="30" name="Descreption_recipes"> </textarea>
                </div>










                <div class="field-wrap field-wrap-2">
                    <label>
                        Ingredients<span class="req">*</span>
                    </label>



                    <textarea rows="4" cols="30" name="Ingredients_recipes"> </textarea>





                </div>

                <div class="field-wrap">
                    <label>
                        Upload Image<span class="req">*</span>
                    </label>
                    <input type="text"required autocomplete="off" name="Image_recipes"/>
                </div>




                <br/>



                <input type="submit" value="Insert" class="button button-block" />

            </form>

        </div>





        <div id="addIngredient">
            <h1>Add Your Ingredient</h1>

            <form action="/admin/ingredients" method="post">

                <div class="field-wrap">
                    <label>
                        the Name<span class="req">*</span>
                    </label>
                    <input type="text"required autocomplete="off" name="name"/>
                </div>

                <div class="field-wrap">
                    <label>
                        category<span class="req">*</span>
                    </label>
                    <input type="text"required autocomplete="off" name="category"/>
                </div>

                <div class="field-wrap">
                    <label>
                        Uplaod Image<span class="req">*</span>
                    </label>
                    <input type="text"required autocomplete="off" name="image"/>
                </div>

                <p class="forgot"><a href="#">Forgot Password?</a></p>

                <input type="submit" value="Insert" class="button button-block" />


            </form>

        </div>

    </div><!-- tab-content -->

</div> <!-- /form -->























